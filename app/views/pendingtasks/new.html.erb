<%= form_for [@user, @pendingtask] do |f| %>
  <%= f.label :text %>
  <%= f.text_area :text %>
  <br>
  <%= f.label :assignee_id %>
  <%= f.text_field :assignee_id %>
  <br>
  <%= f.label :voter_ids %>
  <%= f.text_field :voter_ids %>
  <br>
  <%= f.label :group %>
  <%= f.select :group, @user.groups.map{|g| [g.name,g.id]} %><br>
  <%= f.submit %>
<% end %>